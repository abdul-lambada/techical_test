generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  refreshTokenHash String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  trips     Trip[]
}

model Vehicle {
  id        String   @id @default(uuid())
  plate     String   @unique
  label     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  trips     Trip[]
}

model Trip {
  id         String   @id @default(uuid())
  vehicleId  String
  userId     String?
  startedAt  DateTime
  endedAt    DateTime?
  status     TripStatus @default(RUNNING)
  distanceKm Float      @default(0)

  vehicle    Vehicle   @relation(fields: [vehicleId], references: [id])
  user       User?     @relation(fields: [userId], references: [id])

  @@index([vehicleId, startedAt])
}

enum TripStatus {
  RUNNING
  IDLE
  STOPPED
}
